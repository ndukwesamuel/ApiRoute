<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    

    
    <h1> Details Page </h1>
    <h1><%= data.name %></h1>
    <h1><%= data.Age %></h1>
    <h1><%= data.Address %></h1>
    <!-- <h2> <%= data.id %></h2> -->
    <a href=" " class="delete" data-doc=<%= data._id %> ""> Delete </a>
</body>

<script >

    const delete_data = document.querySelector('.delete')
    console.log(delete_data);
    delete_data.addEventListener('click', (e) => {
        console.log('working');
        const endpoint =`/details/${delete_data.dataset.doc}`
        console.log(endpoint);
        fetch(endpoint, {
            method: 'DELETE'
        })
        .then(res => res.json())
        .then(data => window.location.href = data.redirect)
        .catch(err => console.log(err))
    })
</script>
</html>